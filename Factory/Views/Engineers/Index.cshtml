@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;
<div class="container">
<br>
<br>
<div class="column">
  <div class=row>
    <div class="card border-primary mb-3" style="max-width: 40rem;">
      <div class="card-header">
        <h1>Glorified machine babysitters! (Aka Engineers)</h1>
          @if (@Model.Count == 0)
          {
            <h4>Hire some dang babysitters, these machines aren't going to watch themselves!</h4>
          }
      </div>
      <div class="card-body">
        @foreach (Engineer engineer in Model)
        {
          <li><h2>@Html.ActionLink($"{engineer.Name}", "details", new { id = engineer.EngineerId })</h2></li>
        }
      </div>
    </div>
    <br>
    <br>
      <div class="col-md-3">
      <br>
      <button type="button" class="btn btn-primary" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Hire new babysitter", "Create")</button>
      <br>
      <br>
      <hr>
      <button type="button" class="btn btn-primary" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Home", "Index", "Home")</button>
      </div>
  </div>
</div>
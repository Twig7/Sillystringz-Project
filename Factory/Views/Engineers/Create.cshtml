@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer
<div class="container">
<br>
<br>
<div class="column">
  <div class=row>
    <div class="card border-primary mb-3" style="max-width: 40rem;">
      <div class="card-header">
        <h1>Did you get a new glorified machine babysitter?</h1>
      </div>
      <div class="card-body">
        @using (Html.BeginForm())
        {
          @Html.LabelFor(model => model.Name)
          @Html.TextBoxFor(model => model.Name)
          <br>
          @Html.LabelFor(model => model.Details)
          @Html.LabelFor(model => model.Details)
          <br>
          @Html.Label("Assign machine")
          @Html.DropDownList("MachineId")
          <br>
          <br>
          <input type="submit" value="Assign this babysitter" class="btn btn-primary"/>
        }
      </div>
    </div>
    <br>
    <br>
    <div class="col-md-3">
      <button type="button" class="btn btn-primary" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Show all babysitters", "Index")</button>"
      <br>
      <br>
      <button type="button" class="btn btn-primary" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Home", "Index", "Home")</button>
    </div>
  </div>
</div>